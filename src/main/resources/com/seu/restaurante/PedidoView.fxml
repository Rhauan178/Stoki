<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.seu.restaurante.PedidoViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label fx:id="labelTitulo" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Novo Envio para Mesa X" />
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <ComboBox fx:id="comboCardapio" prefWidth="250.0" promptText="Selecione um item..." />
                <Button fx:id="botaoAdicionar" onAction="#adicionarItemAoPedido" text="Adicionar Item" />
                <Button fx:id="botaoRemover" onAction="#removerItemDoPedido" text="Remover Item" />
            </children>
        </HBox>
        <ListView fx:id="listaItensPedido" prefHeight="200.0" prefWidth="350.0" />
        <VBox spacing="5.0">
            <children>
                <Label text="Observações (para este envio):" style="-fx-font-weight: bold;" />
                <TextArea fx:id="textAreaObservacao" prefHeight="70.0" wrapText="true" />
            </children>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </VBox>
        <Button fx:id="botaoEnviarCozinha" onAction="#enviarParaCozinha" text="Enviar para a Cozinha" maxWidth="Infinity" style="-fx-base: -fx-accent; -fx-font-weight: bold;">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Button>
        <Button fx:id="botaoCancelar" onAction="#cancelarEnvio" text="Cancelar" maxWidth="Infinity" styleClass="button-perigo" />
    </children>
</VBox>